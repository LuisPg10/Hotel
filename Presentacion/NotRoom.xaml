<UserControl x:Class="Presentacion.NotRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Presentacion"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Margin="100"
             d:Height="auto" d:Width="auto">

    <UserControl.DataContext>
        <local:NotRoom/>
    </UserControl.DataContext>
    <Grid Background="#FFFFFF">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Imagenes/sad.png" Width="200"
               VerticalAlignment="Bottom" Margin="0, 20, 0, 50"/>
        
        <Label x:Name="txtInfo" Grid.Row="1" FontSize="20" HorizontalAlignment="Center"
            Foreground="#908E8E" Content="{Binding txtInfo}"/> 
    </Grid>
</UserControl>
