<UserControl x:Class="Presentacion.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion"
             xmlns:viewModels="clr-namespace:Presentacion.ViewModels"
             mc:Ignorable="d" Height="581" Width="876">

    <UserControl.DataContext>
        <viewModels:LoginViewModel/>
    </UserControl.DataContext>
    
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border>
            <StackPanel Grid.Column="0" Orientation="Vertical" Width="340" Margin="0, 10, 0, 0">
                <Label Style="{StaticResource labelTitular}" FontSize="55">
                    Iniciar Sesión
                </Label>

                <TextBox Margin="0, 100, 0, 0" Style="{StaticResource textBox}">
                    Usuario
                </TextBox>
                <TextBox Margin="0, 15, 0, 70" Style="{StaticResource textBox}">
                    Contraseña
                </TextBox>

                <Button Style="{StaticResource btnMain}" FontSize="50">
                    Entrar
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
