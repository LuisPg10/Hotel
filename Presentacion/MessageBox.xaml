<Window x:Class="Presentacion.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Height="180" Width="400" WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        BorderBrush="#787474"
        BorderThickness="2" WindowStartupLocation="CenterOwner" SizeToContent="Width" MouseDown="Window_MouseDown">

    <Window.DataContext>
        <local:MessageBox/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="15">
            <Label x:Name="message" Grid.Row="1" FontSize="25"
                   Content="{Binding message}" 
                   HorizontalContentAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Padding="10">
            <Button x:Name="btnAction" 
                    Style="{StaticResource btnActionBox}"
                    Content="Aceptar"
                    FontSize="15"
                    HorizontalAlignment="Right" Click="btnAction_Click"/>
        </Border>
    </Grid>
</Window>
